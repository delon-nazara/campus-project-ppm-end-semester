<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".OutfitAdapter">

    <!-- ImageView for Outfit Image -->
    <ImageView
        android:id="@+id/outfitImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/pictures_folders"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />

    <!-- TextView for Outfit Name -->
    <TextView
        android:id="@+id/outfitName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Outfit Name"
    android:textSize="16sp"
    android:textColor="#000000"
    android:layout_marginTop="8dp"
    app:layout_constraintTop_toBottomOf="@+id/outfitImage"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
