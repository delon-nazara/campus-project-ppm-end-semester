<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background"
        android:id="@+id/rekomendasi_outfit" >

        <!-- Judul -->
        <TextView
            android:id="@+id/judul_rekomendasi_outfit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/judul_rekomendasi"
            android:textAlignment="center"
            android:fontFamily="@font/hedvig_letters_serif"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toTopOf="parent"/>

        <!-- Card Top -->
        <ImageView
            android:id="@+id/bg_top"
            android:layout_width="254dp"
            android:layout_height="200dp"
            android:layout_marginTop="150dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/box" />

        <ImageView
            android:id="@+id/bg_judultop"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginStart="52dp"
            android:layout_marginTop="130dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/box" />

        <TextView
            android:id="@+id/judul_top"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="@string/top"
            android:fontFamily="@font/hedvig_letters_serif"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="7dp"
            app:layout_constraintStart_toStartOf="@id/bg_judultop"
            app:layout_constraintEnd_toEndOf="@id/bg_judultop"
            app:layout_constraintTop_toTopOf="@id/bg_judultop"
            app:layout_constraintBottom_toBottomOf="@id/bg_judultop" />

        <ImageButton
            android:id="@+id/random_top"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="284dp"
            android:layout_marginTop="205dp"
            android:background="@null"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/random" />

        <ImageView
            android:id="@+id/fotorandom_top"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="65dp"
            app:layout_constraintStart_toStartOf="@id/bg_top"
            app:layout_constraintTop_toTopOf="@id/bg_top"
            app:layout_constraintEnd_toEndOf="@id/bg_top"
            app:layout_constraintBottom_toBottomOf="@id/bg_top"
            app:srcCompat="@drawable/foto_random" />

        <!-- Card Bottom -->
        <ImageView
            android:id="@+id/bg_bottoms"
            android:layout_width="254dp"
            android:layout_height="200dp"
            android:layout_marginTop="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bg_top"
            app:srcCompat="@drawable/box" />

        <ImageView
            android:id="@+id/bg_judulbottoms"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginStart="52dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bg_top"
            app:srcCompat="@drawable/box" />

        <TextView
            android:id="@+id/judul_bottoms"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="@string/bottoms"
            android:fontFamily="@font/hedvig_letters_serif"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="7dp"
            app:layout_constraintStart_toStartOf="@id/bg_judulbottoms"
            app:layout_constraintEnd_toEndOf="@id/bg_judulbottoms"
            app:layout_constraintTop_toTopOf="@id/bg_judulbottoms"
            app:layout_constraintBottom_toBottomOf="@id/bg_judulbottoms" />

        <ImageButton
            android:id="@+id/random_bottoms"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="284dp"
            android:layout_marginTop="160dp"
            android:background="@null"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/random_top"
            app:srcCompat="@drawable/random" />

        <ImageView
            android:id="@+id/fotorandom_bottoms"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="65dp"
            app:layout_constraintStart_toStartOf="@id/bg_bottoms"
            app:layout_constraintTop_toTopOf="@id/bg_bottoms"
            app:layout_constraintEnd_toEndOf="@id/bg_bottoms"
            app:layout_constraintBottom_toBottomOf="@id/bg_bottoms"
            app:srcCompat="@drawable/foto_random" />

        <!-- Card Accessories -->
        <ImageView
            android:id="@+id/bg_accessories"
            android:layout_width="254dp"
            android:layout_height="200dp"
            android:layout_marginTop="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bg_bottoms"
            app:srcCompat="@drawable/box" />

        <ImageView
            android:id="@+id/bg_judulaccessories"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginStart="52dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bg_bottoms"
            app:srcCompat="@drawable/box" />

        <TextView
            android:id="@+id/judul_accessories"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="@string/accessories"
            android:fontFamily="@font/hedvig_letters_serif"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@id/bg_judulaccessories"
            app:layout_constraintEnd_toEndOf="@id/bg_judulaccessories"
            app:layout_constraintTop_toTopOf="@id/bg_judulaccessories"
            app:layout_constraintBottom_toBottomOf="@id/bg_judulaccessories" />

        <ImageButton
            android:id="@+id/random_accessories"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="284dp"
            android:layout_marginTop="160dp"
            android:background="@null"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/random_bottoms"
            app:srcCompat="@drawable/random" />

        <ImageView
            android:id="@+id/fotorandom_accessories"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="65dp"
            app:layout_constraintStart_toStartOf="@id/bg_accessories"
            app:layout_constraintTop_toTopOf="@id/bg_accessories"
            app:layout_constraintEnd_toEndOf="@id/bg_accessories"
            app:layout_constraintBottom_toBottomOf="@id/bg_accessories"
            app:srcCompat="@drawable/foto_random" />

        <!-- Card Shoes -->
        <ImageView
            android:id="@+id/bg_shoes"
            android:layout_width="254dp"
            android:layout_height="200dp"
            android:layout_marginTop="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bg_accessories"
            app:srcCompat="@drawable/box" />

        <ImageView
            android:id="@+id/bg_judulshoes"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginStart="52dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bg_accessories"
            app:srcCompat="@drawable/box" />

        <TextView
            android:id="@+id/judul_shoes"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="@string/shoes"
            android:fontFamily="@font/hedvig_letters_serif"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="7dp"
            app:layout_constraintStart_toStartOf="@id/bg_judulshoes"
            app:layout_constraintEnd_toEndOf="@id/bg_judulshoes"
            app:layout_constraintTop_toTopOf="@id/bg_judulshoes"
            app:layout_constraintBottom_toBottomOf="@id/bg_judulshoes" />

        <ImageButton
            android:id="@+id/random_shoes"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="284dp"
            android:layout_marginTop="160dp"
            android:background="@null"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/random_accessories"
            app:srcCompat="@drawable/random" />

        <ImageView
            android:id="@+id/fotorandom_shoes"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="65dp"
            app:layout_constraintStart_toStartOf="@id/bg_shoes"
            app:layout_constraintTop_toTopOf="@id/bg_shoes"
            app:layout_constraintEnd_toEndOf="@id/bg_shoes"
            app:layout_constraintBottom_toBottomOf="@id/bg_shoes"
            app:srcCompat="@drawable/foto_random" />

        <!-- Button Random All -->
        <Button
            android:id="@+id/random_all"
            android:layout_width="160dp"
            android:layout_height="56dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="#FFF5F4"
            android:text="@string/random_all"
            android:textColor="@color/black"
            android:fontFamily="@font/hedvig_letters_serif"
            android:textSize="14sp"
            android:textStyle="bold"
            app:icon="@drawable/ic_random"
            app:iconTint="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bg_shoes" />

        <!-- Button Submit -->
        <Button
            android:id="@+id/submit"
            android:layout_width="146dp"
            android:layout_height="56dp"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="20dp"
            android:text="@string/submit"
            android:textColor="@color/black"
            android:fontFamily="@font/hedvig_letters_serif"
            android:textSize="15sp"
            android:textStyle="bold"
            android:backgroundTint="#FFF5F4"
            app:layout_constraintStart_toEndOf="@id/random_all"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bg_shoes" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>